@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<MtgDb.Info.Card[]>

<div class="well" style="width:800px;margin-left: auto; margin-right: auto ;">
@foreach(var card in Model)
{
    <div class="col-6 col-sm-6 col-lg-4">
        <div style="text-align:center;">
        <a href="~/cards/@card.Id" class="thumbnail">
            <img src="@card.CardImage" />
        </a>
        @if(@Html.CurrentUser != null)
        {
            <button type="button" class="btn btn-danger">-</button>
            <input type="text" style="width:30px;" placeholder="0" />
            <button type="button" class="btn btn-success">+</button>
        }
        </div>
    </div>
}
<br style="clear:both;"/>
</div>
