@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<MtgDb.Info.IndexModel>
@{
  Layout = "_Layout.cshtml";
}

<div class="row">
    <div id="test" class="">
      @if(Model.Cards != null)
      {
        <div class="row">
            <div class="panel panel-default">
            <div class="panel-heading">
            <ul class="pager">
                <li class="previous"><a href="?Page=@Model.PrevPage">&larr; Back</a></li>
                <li>Page @Model.Page</li>
                <li class="next"><a href="?Page=@Model.NextPage">Next &rarr;</a></li>
            </ul>
            </div>
            <div class="panel-body">
            @Html.Partial("_Cards", Model.Cards)
            </div>
            <div class="panel-footer">
            <ul class="pager">
                <li class="previous"><a href="?Page=@Model.PrevPage">&larr; Back</a></li>
                <li>Page @Model.Page</li>
                <li class="next"><a href="?Page=@Model.NextPage">Next &rarr;</a></li>
            </ul>
            </div>
            </div>
        </div>
      }
      else
      {
        <div class="jumbotron">
        <h1>M:TG DB <small>[ALPHA]</small></h1>
        <p>
            Magic: the gathering open database project 
        </p>
        </div>
        <div class="row">
            <div class="col-6 col-sm-6 col-lg-4">
            <h2>Open Database</h2>
            <p>
            The database is open, meaning that the community can add and edit the information for cards and sets.
            You can submit a change, the change will be reviewed, you will be notfie
            </p>
            <p><a class="btn btn-default" href="#" role="button">View details &raquo;</a></p>
            </div><!--/span-->
            <div class="col-6 col-sm-6 col-lg-4">
                <h2>The API</h2>
                <p><a href="http://api.mtgdb.info">api.mtgdb.info</a></p>
                <p>
                No screen scraping nessecary, all information that is on M:TG DB is available through the easy to use 
                API. You can use the API directly or use one our wrappers.
                </p>
                <p><a class="btn btn-default" href="http://api.mtgdb.info" role="button">View API &raquo;</a></p>
            </div><!--/span-->
        </div><!--/row-->
    
        }
    </div><!--/span-->

    <div id="sidebar">
        @Html.Partial("_Sets", Model.SetList)
        <div id="arrow_container" class="isDown"><div class="arrow" id="down"></div></div>
    </div><!--/span-->
</div><!--/row-->
<script>
    $("#arrow_container").click( function(event){
    event.preventDefault();
    if ($(this).hasClass("isDown") ) {
        $("#sidebar").animate({marginTop:"4985px"}, 200);          
        $(this).removeClass("isDown");
    } else {
        $("#sidebar").animate({marginTop:"-100px"}, 200);   
        $(this).addClass("isDown");
    }
    return false;
    });
</script>
