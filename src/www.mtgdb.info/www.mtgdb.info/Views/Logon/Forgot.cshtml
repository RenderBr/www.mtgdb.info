@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<ForgotModel>
@{
  Layout = "_Layout.cshtml";
}
@section Top
{
<form action="/forgot" method="post" style="color:white;">
<h3>Reset Password</h3>
<div class="form-group">
    <label for="Email">Email address</label>
    <input type="email" class="form-control" id="Email" name="Email" placeholder="Enter email" autofocus required/>
</div>
<button type="submit" class="btn btn-default">Reset</button>
</form>
<br />
<br />
}

